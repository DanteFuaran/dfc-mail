# ═══════════════════════════════════════════════
# DFC Mail Bot — Конфигурация приложения
# ═══════════════════════════════════════════════

# - - - - - TELEGRAM BOT - - - - - #

# Токен API Telegram бота. Получите его в https://t.me/BotFather
BOT_TOKEN=

# Имя бота (username без @), используется для реферальных ссылок
BOT_NAME=

# ID администраторов через запятую (получите через @userinfobot)
ADMIN_IDS=

# ID разработчиков через запятую (полный доступ, включая настройки)
DEVELOPER_IDS=

# Контакт поддержки (@username или ссылка)
SUPPORT_CHAT=


# - - - - - БАЗА ДАННЫХ (PostgreSQL) - - - - - #

DATABASE_HOST=dfc-mail-db
DATABASE_PORT=5432
DATABASE_NAME=dfc-mail
DATABASE_USER=dfc-mail
# Пароль генерируется автоматически при установке
DATABASE_PASSWORD=

# Синхронизация с PostgreSQL контейнером
POSTGRES_USER=dfc-mail
POSTGRES_PASSWORD=
POSTGRES_DB=dfc-mail


# - - - - - ПЛАТЕЖНЫЕ СИСТЕМЫ (опционально) - - - - - #

# ЮКасса
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# Heleket
HELEKET_API_KEY=

# Robokassa
ROBOKASSA_MERCHANT_LOGIN=
ROBOKASSA_PASSWORD_1=
ROBOKASSA_PASSWORD_2=

# Lava
LAVA_PROJECT_ID=
LAVA_SECRET_KEY=


# - - - - - WEBHOOK (для production) - - - - - #

# URL для webhook Telegram (оставьте пустым для режима polling)
WEBHOOK_URL=

# Порт webhook сервера
WEBHOOK_PORT=8443

# SSL сертификаты (если Nginx обрабатывает HTTPS — оставьте пустыми)
WEBHOOK_SSL_CERT_PATH=
WEBHOOK_SSL_KEY_PATH=
WEBHOOK_USE_HTTPS=false


# - - - - - УВЕДОМЛЕНИЯ - - - - - #

# ID канала/группы для уведомлений администраторам
NOTIFICATIONS_CHAT_ID=


# - - - - - НАСТРОЙКИ - - - - - #

# Реферальная комиссия (%)
REFERRAL_COMMISSION=10

# Время бронирования заказа (минут)
ORDER_RESERVATION_MINUTES=15

# Задержка между сообщениями рассылки (мс)
BROADCAST_THROTTLE=25

# Тестовая оплата (true — для разработки, false — для production)
ENABLE_TEST_PAYMENT=false
